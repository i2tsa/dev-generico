<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_stock_re_document">

        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <!--ARTICLE -->
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
          <!--HEADER-->
          <div class="header"  style="margin-bottom: 0px !important;">
            <div class="row m-0" style="border: 1px solid black; margin-bottom: 0px !important;">
                <!--COMPANY LOGO-->
                <div class="col-3 text-left">
                    <!--<img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" style="display: block !important; float: left !important; position: absolute !important; margin-top: 0px !important; margin-bottom: 0px !important; top: 10px !important; left: 10px !important; bottom: auto !important; max-height: 95px;"/>-->
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-width: 230px; max-height: 60px; margin-top: 30px;" alt="Logo"/>
                </div><!--END COMPANY LOGO-->
                <!--FE-->
                <div class="col-2 text-center" style="margin-top: 42px !important;">
                  <span style="font-size: 11px; font-weight: bold;">Remito<br/>electrónico</span>
                </div>
                <!--END FE-->
                <!--DOCUMENT LETTER-->
                <div class="col-2 text-center">
                  <div class="card" style="margin:0px;">
			<div class="card-header" style="font-size: 48px;padding:0px;">R</div>
                    	<div class="card-body" style="height: 20px;padding:0px;">cod. 91</div>
                  </div>
                </div><!--END DOCUMENT LETTER-->
                <!--TIPO,NRO Y FECHA REMITO-->
                <div class="col-5 text-left" name="company_address" style="padding-left: 80px !important;">
                  <h6>N° <span t-field="o.afip_picking_journal.code" />-<span t-field="o.afip_picking_number" /></h6>
		  <small>
			Remito Electrónico<br />
                        <small>Documento no válido como Factura</small>
                  </small>
		  <br />
                  <small>
                          Fecha: <span t-field="o.scheduled_date"/><br/>
                  </small>
                </div>
                <!--END DATOS REMITO-->
            </div>
            <!--div class="row m-0" style="border: 1px solid black; margin-top: 2px !important; margin-bottom: 0px !important;">
                <div  class="col-8" t-if="o.move_type == 'out_invoice' and (o.state == 'posted') and o.l10n_ar_afip_service_start and o.l10n_ar_afip_service_end">
                    <strong>Período facturado desde:</strong>
                    <span t-if="o.l10n_ar_afip_service_start">
                      <span t-field="o.l10n_ar_afip_service_start"  t-options="{'format': 'dd/MM/yyyy'}"/>
                    </span>
                    <strong> hasta:</strong>
                    <span t-if="o.l10n_ar_afip_service_end">
                      <span t-field="o.l10n_ar_afip_service_end"  t-options="{'format': 'dd/MM/yyyy'}"/>
                    </span>
                  </div>
                  <div class="col-4" t-if="o.move_type == 'out_invoice' and (o.state == 'posted' or o.state == 'paid')">
                    <strong>Fecha Vto:</strong>
                    <span t-if="o.invoice_date_due">
                      <span t-field="o.invoice_date_due"/>
                    </span>
                    <span t-if="not o.invoice_date_due">
                      <span t-field="o.invoice_date"/>
                    </span>
                  </div>
              </div-->
          </div><!--END HEADER-->
          <!--PAGE-->
          <div class="page" style="margin-top: 0px !important;font-size: 13px;">

             <!--MY COMPANY-->
              <div class="row m-0" style="border: 1px solid black;">
                  <div class="col-6" style="margin-top: 8px !important;">
                    <span t-field="o.company_id.name" style="font-size: 16px; font-weight: bold;"/>
                    <div t-field="o.company_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                  </div>
                  <div class="col-6">
                    <p><br/></p>
                    <p class="m-0"><strong>CUIT</strong> <span t-field="o.company_id.vat"/> - <span t-field="o.company_id.partner_id.l10n_ar_afip_responsibility_type_id.name"/></p>
                    <p class="m-0"><strong>Ingresos Brutos:</strong> <span t-if="o.company_id.l10n_ar_gross_income_type == 'no_liquida'">No liquida</span> <span t-if="o.company_id.l10n_ar_gross_income_type != 'no_liquida'" t-field="o.company_id.l10n_ar_gross_income_number"/> <br/> <strong>Inicio de actividades:</strong> <span t-field="o.company_id.l10n_ar_afip_start_date"/></p>
                  </div>
              </div>
              <!--END MY COMPANY-->
              <!-- CLIENTE  -->
              <div class="row m-0" style="border: 1px solid black;margin-top:2px !important;">
                <div class="col-6">
                  <strong>Cliente: </strong><span t-field="o.partner_id"/>
                  <t t-set="dir" t-value="str(o.partner_id.street) +', ' + str(o.partner_id.city) + '('+ str(o.partner_id.zip) + '), ' + str(o.partner_id.country_id.code)"/>
                  <p><strong>Dirección: </strong><span t-esc="dir"/></p>
                </div>
                <!--div name="invoice_address" class="col-4">
                  <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                </div-->

                <div name="invoice_address" class="col-6">
                  <strong>CUIT: </strong><span t-field="o.partner_id.vat"/>
                  <p><strong>Condicion de IVA </strong><span t-field="o.partner_id.l10n_ar_afip_responsibility_type_id.name"/></p>
                </div>
              </div>
              <!-- END CLIENTE  -->
              <!-- ENCABEZADO FACTURA -->
              <!--div class="row m-0" style="border:solid 1px #000;margin-top:2px !important;">
                <div class="col-2" t-if="o.currency_id">
                  <strong>Moneda: </strong>
                  <p class="m-0" t-field="o.currency_id.name"/>
                </div>
                <div class="col-2" t-if="o.currency_id.id != o.company_id.currency_id.id">
                  <strong>Cotiz: </strong>
                  <p class="m-0" t-field="o.l10n_ar_currency_rate"/>
                </div>
                <div class="col-2" t-if="o.invoice_origin">
                  <strong>Origen: </strong>
                  <p class="m-0" t-field="o.invoice_origin"/>
                </div>
                <div class="col-2" t-if="o.partner_id.ref">
                  <strong>Cod. Cliente:</strong>
                  <p class="m-0" t-field="o.partner_id.ref"/>
                </div>
              </div-->
              <!-- END ENCABEZADO FACTURA -->
              <!-- Is there a discount on at least one line? -->
              <!--t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/-->
              <!-- TABLA ITEMS -->
              <table class="table table-condensed" style="margin-top:2px !important;">
                  <thead>
                    <tr style="background: #ddd;">
                      <th style="border: solid 1px #000;padding: 8px;">Código</th>
                      <th style="border: solid 1px #000;padding: 8px;">Producto</th>
                      <th class="text-right" style="border: solid 1px #000;padding: 8px;">Cantidad</th>
                    </tr>
                  </thead>
                  <tbody class="invoice_tbody">
                    <tr t-foreach="o.move_line_ids_without_package" t-as="l">
                      <td style="padding: 5px;"><span t-field="l.product_id.default_code"/></td>
                      <td style="padding: 5px;"><span t-field="l.product_id.name"/></td>   
                      <td style="padding: 5px;" class="text-right">
			  <span t-esc="'{0:,.2f}'.format(l.qty_done)"/>
                          <span t-field="l.product_uom_id" groups="product.group_uom"/>
                      </td>
                  </tr>
                </tbody>
              </table><!-- END TABLA ITEMS -->

              <!--SUBTOTAL E IMPUESTOS INTEGRADOS-->
              <!--div class="row m-0" style="border: 1px solid #000;">
                  <div class="col-7 m-9" />
                  <div class="col-5 m-0">
                      <table class="table table-condensed" style="border: 0 solid transparent;border-style: none;">
                          <tr style="border: 0 solid transparent;border-style: none;" t-if="o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                              <td style="border: 0 solid transparent;border-style: none;"><strong>Subtotal</strong></td>
                              <td style="border: 0 solid transparent;border-style: none;" class="text-right">
                                  <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                              </td>
                          </tr>
                          <tr t-if="len(o.move_tax_ids) &gt; 0 and o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                                <td colspan="2">
                                    <table class="table table-condensed" style="width: 100%">
                                        <thead>
                                            <tr>
                                                <th>Impuesto</th>
                                                <th class="text-right">Base</th>
                                                <th class="text-right">Monto</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.move_tax_ids" t-as="t">
                                                <td><span t-field="t.tax_id.description"/></td>
                                                <td class="text-right">
                                                    <span t-field="t.base_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="t.tax_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                          <tr class="border-black">
                              <td><strong>Total</strong></td>
                              <td class="text-right">
                                   <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                              </td>
                          </tr>
                      </table>
                  </div>
              </div--><!--END SUBTOTAL E IMPUESTOS INTEGRADOS-->

          <br/>
	  <p t-if="o.note"><span t-field="o.note" /></p>

          </div><!--END PAGE-->
          <!-- CAI -->
          <div class="footer m-0 p-0" style="border: 1px solid black; color:#000;">
	      <div class="row m-0">
                <div class="col-6 p-2 text-center" t-if="o.afip_cai">
		<t t-set="barcode" t-value="o.company_id.vat + '091' + o.afip_picking_journal.code + o.afip_cai + o.afip_cai_due.strftime('%Y') + o.afip_cai_due.strftime('%m') + o.afip_cai_due.strftime('%d')"/>		
                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Codabar', barcode, 300, 30)" style="width:300px;height:30px"/>
		<br />
		<small><small t-esc="barcode" /></small>
                </div>
                <div class="col-6" t-if="o.afip_cai">
                  <small><strong>CAI: </strong><span t-field="o.afip_cai"/></small><br />
                  <small><strong>Fecha Vencimiento CAI: </strong><span t-field="o.afip_cai_due"/></small>
                </div>
            </div>
          </div>
        </div><!--END ARTICLE-->
</template>

<template id="report_stock_picking">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="l10n_ar_report_picking.report_stock_re_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

<!-- QWeb Reports -->
<report
  id="l10n_stock_picking_report"
  model="stock.picking"
  string="Remitos Electrónicos"
  print_report_name = "((object.name or 'Remitos Electrónicos'))"
  report_type="qweb-pdf"
  name="l10n_ar_report_picking.report_stock_picking"
  file="l10n_ar_report_picking.report_stock_picking"
/>

</data>
</odoo>
